<h2 id="scroll-link-1" class="resource-title" > Recommended vets - Phoenix Metro </h2>
<ul class="resources">
  <% @vets_phoenix.each do |vet| %>
    <li class="resource-cards"> 
      <div class="vet-details-left">
        <h3><%= vet[:name] %></h3>
        <%= simple_format vet[:description] %>
      </div>
      <div class="vet-details-right">
        <p><a href="<%= vet[:website] %>"> 
          website </a></p>
        <p><%= vet[:phone] %></p>
      </div>
      <div class="map">
        <iframe src="<%= vet[:map] %>" width="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
      </div>
    </li>
  <% end %>
</ul>

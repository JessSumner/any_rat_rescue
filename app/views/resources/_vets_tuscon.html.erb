<h2 id="scroll-link-2" class="resource-title"> Recommended vets - Tucson and surrounding area </h2>
<ul class="resources">
  <% @vets_tucson.each do |vet| %>
    <li class="resource-cards">
      <div class="vet-details-left">
        <h3><%= vet["name"] %></h3>
        <%= simple_format vet["description"] %>
      </div>
      <div class="vet-details-right">
        <p><a href="<%= vet["website"] %>">website </a></p>
        <p><%= vet["phone"] %></p>
      </div>
      <div class="map">
        <iframe src="<%= vet["map"] %>" width="100%" height="125px" frameborder="0" style="border:0" allowfullscreen></iframe>
      </div>
    </li>
  <% end %>
</ul>
